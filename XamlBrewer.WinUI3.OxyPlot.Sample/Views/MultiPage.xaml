<Page x:Class="XamlBrewer.WinUI3.OxyPlot.Sample.Views.MultiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:XamlBrewer.WinUI3.OxyPlot.Sample.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:XamlBrewer.WinUI3.OxyPlot.Sample.ViewModels"
      xmlns:oxyplot="using:OxyPlot"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.DataContext>
        <viewmodels:MultiPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <GridView x:Name="GridView"
              SelectionMode="None"
              VerticalAlignment="Stretch"
              Margin="0">
        <GridView.ItemsPanel>
            <ItemsPanelTemplate>
                <VariableSizedWrapGrid ItemHeight="360"
                                       ItemWidth="420"
                                       Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </GridView.ItemsPanel>

        <!-- Bar Series -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".2"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".5" />

                <TextBlock Text="Bar"
                           Padding="0"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10 5" />

                <oxyplot:PlotView Model="{x:Bind ViewModel.BarSeriesModel}"
                                  Background="Transparent"
                                  Grid.Row="1" />
            </Grid>
        </GridViewItem>

